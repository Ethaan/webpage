@import url('https://fonts.googleapis.com/css?family=Montserrat')

html
  box-sizing: border-box
  font-family: 'Montserrat', sans-serif

*, *:before, *:after
  box-sizing: inherit

*
  margin: 0
  padding: 0


a
  text-decoration: none
  color: blue

a:hover
  color: blue

ol, ul
  list-style: none

input, select, textarea, button
  font-family: inherit

.centered
  text-align: center
